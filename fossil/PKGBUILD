pkgname=fossil-git
_pkgname=fossil
provides=('fossil')
conflicts=('fossil')
pkgver=20111018024036
pkgrel=jkl1
pkgdesc="Simple, high-reliability, distributed software configuration management"
arch=('i686' 'x86_64')
license=('BSD')
url="http://www.fossil-scm.org/"
depends=('openssl')
source=("fossil-src-${pkgver}.tar.gz")
md5sums=('57e1e276c762d80ccb2bc95488aaadd8')

package() {
	cd ${_pkgname}-src-${pkgver}
	
	./configure --prefix=/usr
	
	# headers and translate targets are problematic with parallel jobs
	make -j1 bld bld/headers

	make

	install -Dm755 ${_pkgname} \
		${pkgdir}/usr/bin/${_pkgname}

	install -Dm644 COPYRIGHT-BSD2.txt \
		${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
} 
